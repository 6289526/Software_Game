{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build server",// このタスクの名前
            "type": "shell",        // 実行方法，通常はshell
            "command": "mkdir -p build && cd build && chmod 777 ../debug.sh && ../debug.sh && cmake -DCMAKE_BUILD_TYPE=Debug .. && make",      // 実行するコマンド
            "args": [],             // コマンドの引数
            "group": {              // タスクのグループ，通常は記載の通り
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {     // エラー表示の設定    
                "owner": "c",
                "pattern":[
                    {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                ]
            }
        }
    ]
}
